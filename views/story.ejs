<%- include('./partials/head') %>

<body class="story-page">
    <header>
        <a href="/bar" class="back">
            <img src="img/back-button.svg" alt="back arrow" />
        </a>
        <img
          src="img/wood-sign.svg"
          alt="wooden ilojo bar sign attached to ropes"
          class="wood-sign"
        />
        <% singleStory.forEach(story => { %> 
            <% let storyTitle = story.title.split(' ').join('_').toLowerCase() %>           
            <h1><%- story.title %></h1>
        <% }) %>
    </header>
    <main>
        <% singleStory.forEach(story => { %> 
            <% story.text.forEach(paragraph => {%>
            <p><%- paragraph.text %></p>
            <% }) %>
        <% }) %>
    </main>

<%- include('./partials/foot') %>